<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

   <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/autoStart"
           android:text="开机自动启动"
           android:layout_below="@+id/button_select_app" android:layout_toEndOf="@+id/button_select_app"/>
   <CheckBox
           android:text="记录GPS轨迹"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" android:layout_below="@+id/autoStart"
           android:layout_alignStart="@+id/autoStart" android:id="@+id/recordGPS"/>
   <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                 android:id="@+id/linearLayout"
                 android:layout_below="@+id/recordGPS">
      <CheckBox
              android:text="上传GPS数据"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/uploadGPSData"
              android:layout_below="@+id/recordGPS" android:layout_alignStart="@+id/recordGPS"/>
      <Space
              android:layout_width="10dp"
              android:layout_height="wrap_content"/>
      <EditText
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:inputType="textUri"
              android:text=""
              android:hint="记录轨迹服务器地址"
              android:ems="10"
              android:id="@+id/editText_remoteURL" android:layout_weight="1"/>

   </LinearLayout>

   <CheckBox
           android:text="开启悬浮窗口"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/enableFloatingWindow"
           android:layout_below="@+id/enableOver" android:layout_alignStart="@+id/linearLayout"/>
   <CheckBox
           android:text="开启智能巡航"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/enableAutoNavi"
           android:layout_alignBaseline="@+id/enableAudio" android:layout_alignBottom="@+id/enableAudio"
           android:layout_toEndOf="@+id/button_select_app"/>
   <CheckBox
           android:text="开启语音功能"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/enableAudio"
           android:checked="false" android:layout_below="@+id/linearLayout"
           android:layout_alignStart="@+id/checkBox_showLimit"/>
   <Button
           android:text="Select maps"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/button_select_app"
           android:visibility="gone"/>
   <Button
           android:id="@+id/confirm"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/str_btn_ok"
           android:layout_marginRight="21dp"
           android:layout_weight="1"
           android:layout_below="@+id/editText_speedadjust" android:layout_toEndOf="@+id/checkBox_autoSolt"/>
   <Button
           android:text="1. 允许顶层显示功能"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/EnableFalting"
           android:layout_below="@+id/enableAutoNavi" android:layout_alignStart="@+id/enableAutoNavi"
           android:layout_weight="1"/>
   <Button
           android:text="2. 允许程序交互功能"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/enableOver"
           android:layout_alignLeft="@+id/EnableFalting"
           android:layout_alignStart="@+id/EnableFalting" android:layout_below="@+id/EnableFalting"
           android:layout_weight="1"/>
   <CheckBox
           android:text="桌面也显示悬浮窗口"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" android:layout_below="@+id/enableFloatingWindow"
           android:id="@+id/checkBox_showondescktop" android:layout_toEndOf="@+id/button_select_app"
           android:visibility="gone"/>
   <TextView
           android:text="TextView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" android:layout_alignParentBottom="true"
           android:layout_toEndOf="@+id/button_select_app" android:id="@+id/textView_uid"/>
   <RadioGroup
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" android:layout_below="@+id/checkBox_showondescktop"
           android:layout_toEndOf="@+id/button_select_app" android:layout_marginStart="15dp"
           android:id="@+id/radioGroup_flatingSelect">
      <RadioButton
              android:text="不在桌面显示"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:id="@+id/fradioButton_noHome" android:layout_weight="1"/>
      <RadioButton
              android:text="只在桌面显示"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:id="@+id/radioButton_onlyHome" android:layout_weight="1"/>
      <RadioButton
              android:text="上帝模式"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:id="@+id/radioButton_all" android:layout_weight="1"/>
   </RadioGroup>
    <CheckBox
            android:text="自动靠边"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_above="@+id/radioGroup_flatingSelect"
            android:layout_toEndOf="@+id/enableFloatingWindow" android:id="@+id/checkBox_autoSolt"/>
   <TextView
           android:text="GPS速度调整:"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/textView"
           android:layout_alignBottom="@+id/editText_speedadjust" android:layout_toEndOf="@+id/button_select_app"/>
   <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:inputType="numberSigned"
           android:ems="5"
           android:hint="0(-5,5)"
           android:layout_below="@+id/radioGroup_flatingSelect"
           android:id="@+id/editText_speedadjust" android:layout_toEndOf="@+id/textView"/>
   <CheckBox
           android:text="显示限速窗口"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/checkBox_showLimit" android:layout_below="@+id/checkBox_autoSolt"
           android:layout_toEndOf="@+id/radioGroup_flatingSelect" android:layout_marginStart="14dp"/>
   <CheckBox
           android:text="显示速度窗口"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" android:layout_below="@+id/checkBox_showLimit"
           android:layout_alignStart="@+id/checkBox_showLimit" android:id="@+id/checkBox_showSpeed"/>
    <TextView
            android:text="启用1，2两项才能使用悬浮窗"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_showmessage"
            android:layout_alignBaseline="@+id/enableOver" android:layout_alignBottom="@+id/enableOver"
            android:layout_toEndOf="@+id/enableOver"/>
   <TextView
           android:text="语音音量："
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/textView_audio"
           android:layout_alignBottom="@+id/confirm" android:layout_alignStart="@+id/radioGroup_flatingSelect"/>
   <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:inputType="number"
           android:ems="2"
           android:id="@+id/editText_audioVolume"
           android:layout_alignBottom="@+id/textView_audio"
           android:layout_toEndOf="@+id/textView_audio"/>
</RelativeLayout>
