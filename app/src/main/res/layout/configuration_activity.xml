<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

   <Button
           android:id="@+id/confirm"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/str_btn_ok" android:layout_alignTop="@+id/checkBox"
           android:layout_alignStart="@+id/checkBox" android:layout_marginStart="57dp" android:layout_marginTop="73dp"/>
   <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/checkBox"
           android:text="@string/startAfterSystemLaunch"
           android:layout_marginStart="31dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
           android:layout_marginTop="37dp"/>

</RelativeLayout>
