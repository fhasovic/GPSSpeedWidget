<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.Velociraptor"
    android:visibility="invisible"
    tools:visibility="visible">

    <RelativeLayout
            android:id="@+id/limit"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="8dp"
            android:background="@drawable/floating_background_international"
            android:elevation="2dp">

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/limit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:padding="14dp"
                android:text="--"
                android:textColor="@android:color/background_dark"
                app:autoSizeTextType="uniform" android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
        <TextView
                android:id="@+id/limit_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="?android:textColorPrimary"
                android:textSize="12sp"
                tools:text="限速" android:text="限速"
                android:layout_below="@+id/limit_text" android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <include layout="@layout/floating_speedometer_stub" />
</RelativeLayout>